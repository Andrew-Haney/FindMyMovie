<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_favorite_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        android:layout_marginVertical="4dp"
        tools:text="Title"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/iv_favorite_poster"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"/>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_favorite_poster"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/material_dynamic_primary60"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/display_poster_of_movie" />

</androidx.constraintlayout.widget.ConstraintLayout>